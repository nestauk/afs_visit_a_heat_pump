<div class="flex items-center justify-center h-full">

  <div class="max-w-sm bg-gray-300 p-4 rounded shadow">
  <h2>Sign up</h2>

  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <div class="flex gap-2">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>
    <%= f.input :email %>
    <%= f.input :password, required: true, hint: "#{@minimum_password_length} characters minimum" %>
    <%= f.input :password_confirmation, required: true %>

    <%= f.button :submit, "Sign up", class: 'btn bg-blue-600 text-white my-2' %>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>

</div>