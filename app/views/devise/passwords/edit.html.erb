<div class="flex items-center justify-center h-full">

  <div class="max-w-sm bg-gray-300 p-4 rounded shadow">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token, class: 'mb-3 text-red-600' %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: "#{@minimum_password_length} characters minimum including uppercase and lowercase letters and numbers.",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Change my password', class: 'btn w-full bg-indigo-600 text-white mb-2' %>
      </div>
    <% end %>
  </div>
</div>
