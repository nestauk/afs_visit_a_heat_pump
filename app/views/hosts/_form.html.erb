<%= simple_form_for host do |f| %>
  <strong>Private info</strong>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :postcode %>

  <strong>Public info</strong>
  <%= f.input :profile_picture, as: :file, input_html: { accept: 'image/*' } %>
  <% if host.profile_picture.attached? %>
    <em class="text-sm"><%= host.profile_picture.blob.filename %></em>
    <%= image_tag host.profile_picture, width: 250 %>
  <% end %>
  <%= f.input :property_type, as: :select, collection: Host::PROPERTY_TYPES %>
  <%= f.input :hp_type, as: :select, collection: Host::HP_TYPES %>

  <%= f.button :submit, class: 'btn bg-blue-600 text-white' %>
<% end %>
