<%= simple_form_for host do |f| %>
  <strong>Private info</strong>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :postcode %>

  <strong>Public info</strong>
  <%= f.input :property_type %>
  <%= f.input :hp_type %>

  <%= f.button :submit, class: 'btn bg-blue-600 text-white' %>
<% end %>
